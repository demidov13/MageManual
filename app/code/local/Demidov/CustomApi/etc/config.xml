<?xml version="1.0"?>
<config>
    <modules>
        <Demidov_CustomApi>
            <version>1.0.0</version>
        </Demidov_CustomApi>
    </modules>
    <global>
        <helpers>
            <CustomApi>
                <class>Demidov_CustomApi_Helper</class>
            </CustomApi>
        </helpers>
        <blocks>
            <CustomApi>
                <class>Demidov_CustomApi_Block</class>
            </CustomApi>
        </blocks>
        <events>
            <controller_front_init_routers>
                <observers>
                    <CustomApi>
                        <class>Demidov_CustomApi_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </CustomApi>
                </observers>
            </controller_front_init_routers>
        </events>
        <models>
            <CustomApi>
                <class>Demidov_CustomApi_Model</class>
                <resourceModel>CustomApi_resource</resourceModel>
            </CustomApi>
            <CustomApi_resource>
                <class>Demidov_CustomApi_Model_Resource</class>
                <entities>
                    <support_log>
                        <table>customapi_support_log</table>
                    </support_log>
                    <token_bearer>
                        <table>customapi_token_bearer</table>
                    </token_bearer>
                </entities>
            </CustomApi_resource>
        </models>
        <resources>
            <CustomApi_setup>
                <setup>
                    <module>Demidov_CustomApi</module>
                </setup>
            </CustomApi_setup>
        </resources>
        <!-- Custom API default config  -->
        <customapi_mail_settings>
            <email_recipient>itdemidov@ukr.net</email_recipient>
        </customapi_mail_settings>
        <customapi_config>
            <v1>
                <priceIncrease>
                    <validators>
                        <className>Demidov_CustomApi_Model_Validator_ParamIsInt</className>
                    </validators>
                    <handler>
                        <className>Demidov_CustomApi_Model_ProductApi_FixPriceIncrease</className>
                        <properties>
                            <integer>sum</integer>
                        </properties>
                    </handler>
                </priceIncrease>
                <productDelete>
                    <validators>
                        <className>Demidov_CustomApi_Model_Validator_ParamIsInt</className>
                        <className>Demidov_CustomApi_Model_Validator_ProductExist</className>
                    </validators>
                    <handler>
                        <className>Demidov_CustomApi_Model_ProductApi_ProductDelete</className>
                        <properties>
                            <integer>id</integer>
                        </properties>
                    </handler>
                </productDelete>
            </v1>
            <v2>
                <priceIncrease>
                    <validators>
                        <className>Demidov_CustomApi_Model_Validator_PriceIncreaseParams</className>
                    </validators>
                    <handler>
                        <className>Demidov_CustomApi_Model_ProductApi_FixAndPercentPriceIncrease</className>
                        <properties>
                            <string>type_increase</string>
                            <integer>amount</integer>
                        </properties>
                    </handler>
                </priceIncrease>
                <productDelete>
                    <validators>
                        <className>Demidov_CustomApi_Model_Validator_ParamIsInt</className>
                    </validators>
                    <handler>
                        <className>Demidov_CustomApi_Model_ProductApi_ProductMassDelete</className>
                        <properties>
                            <array>ids</array>
                        </properties>
                    </handler>
                </productDelete>
            </v2>
        </customapi_config>
    </global>
    <frontend>
        <routers>
            <CustomApi>
                <use>standard</use>
                <args>
                    <module>Demidov_CustomApi</module>
                    <frontName>customapi</frontName>
                </args>
            </CustomApi>
        </routers>
    </frontend>
    <admin>
        <routers>
            <CustomApi>
                <use>admin</use>
                <args>
                    <module>Demidov_CustomApi</module>
                    <frontName>custom_api</frontName>
                </args>
            </CustomApi>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <CustomApi module="CustomApi">
                <title>Custom API</title>
                <sort_order>80</sort_order>
                <children>
                    <support module="CustomApi">
                        <title>Support</title>
                        <sort_order>10</sort_order>
                        <action>custom_api/adminhtml_support/index</action>
                    </support>
                </children>
            </CustomApi>
        </menu>
    </adminhtml>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <CustomApi>
                                        <title>Custom API</title>
                                    </CustomApi>
                                </children>
                            </config>
                        </children>
                    </system>
                    <CustomApi>
                        <children>
                            <Version1>
                                <title>Version 1</title>
                                <sort_order>1</sort_order>
                            </Version1>
                            <Version2>
                                <title>Version 2</title>
                                <sort_order>2</sort_order>
                            </Version2>
                        </children>
                    </CustomApi>
                </children>
            </admin>
        </resources>
    </acl>
    <crontab>
        <jobs>
            <api_support_clear_log>
                <schedule>
                    <cron_expr>0 0 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>CustomApi/cron::api_support_clear_log</model>
                </run>
            </api_support_clear_log>
        </jobs>
    </crontab>
</config>